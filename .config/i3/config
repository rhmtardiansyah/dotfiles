client.focused_inactive #2E3440 #2E3440 #ECEFF4 #2E3440   #2E3440
client.unfocused        #2E3440 #2E3440 #ECEFF4 #2E3440   #2E3440
client.urgent           #900000 #900000 #FFFFFF #900000   #900000
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C

client.background       #FFFFFF

bar {
  status_command i3blocks -c ~/.config/i3/i3blocks.conf
  colors {
    background #2E3440
    statusline #ECEFF4
    separator  #4C566A

    focused_workspace  #D08770 #D08770 #2E3440
    active_workspace   #2E3440 #2E3440 #ECEFF4
    inactive_workspace #2E3440 #2E3440 #ECEFF4
    urgent_workspace   #900000 #900000 #ECEFF4
    binding_mode       #ebcb8b #ebcb8b #2E3440
  }
}

