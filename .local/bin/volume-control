#!/bin/sh

case $1 in

# Increase volume
    -i)
        pamixer --increase 5
        ;;

# Decrease volume.
    -d)
        pamixer --decrease 5
    ;;

# Mute Volume
    -mute)
        pamixer -t
    ;;

# Increase Mic
    -mi)
    amixer set Capture 5%+
    ;;

# Decrease Mic
    -md)
    amixer set Capture 5%-
    ;;

# Mute Mic
    -mm)
    amixer set Capture toggle
    ;;
esac

pkill -RTMIN+19 dwmblocks

